<% include partials/header.ejs %>
<div class="mt-10">
    <div class="table-responsive">       
        <% if (students.length > 0) {%>
            <table class="table table-hovered">
                <thead class="thead-dark">
                    <tr>
                        <th>ID</th>
                        <th>Image</th>
                        <th>First Name</th>
                        <th>Last Name</th>
                        <th>Number</th>
                        <th>Action</th>
                    </tr>
                </thead>
                <tbody>
                    <% students.forEach((student, index) => { %>
                        <tr>
                            <th><%= student.id %></th>
                            <td><img src="/images/<%= student.image %>" class="rounded-circle student-img" alt=""></td>
                            <td><%= student.first_name %></td>
                            <td><%= student.last_name %></td>
                            <td><%= student.number %></td>
                            <td>
                                <a href="/edit/<%= student.id %>" class="btn btn-sm btn-success">Edit</a>
                                <a href="/delete/<%= student.id %>" class="btn btn-sm btn-danger">Delete</a>
                            </td>
                        </tr>
                    <% }) %>
                </tbody>
            </table>
        <% } else { %>
            <p class="text-center">No students found. Go <a href="/add" >here</a> to add students.</p>
        <% } %>
    </div>
</div>
<% include partials/footer.ejs %>